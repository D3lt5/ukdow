-- Retro / background dietro le tab
local TabBackground = Instance.new("Frame")
TabBackground.Name = "TabBackground"
TabBackground.Size = UDim2.new(0, 120, 1, -60)  -- larghezza tab-bg, altezza ridotta per topbar
TabBackground.Position = UDim2.new(0, 10, 0, 50 + 5)  -- spostata un po' in basso
TabBackground.BackgroundColor3 = Color3.fromRGB(45, 45, 45)  -- grigio scuro per lo sfondo delle tab
TabBackground.BorderSizePixel = 0
TabBackground.Parent = MainFrame

local cornerBg = Instance.new("UICorner")
cornerBg.CornerRadius = UDim.new(0, 12)
cornerBg.Parent = TabBackground

-- Container per le tab (sopra il background)
local TabsContainer = Instance.new("Frame")
TabsContainer.Name = "TabsContainer"
TabsContainer.Size = UDim2.new(0, 120, 1, -60)
TabsContainer.Position = UDim2.new(0, 10, 0, 50 + 5)
TabsContainer.BackgroundTransparency = 1
TabsContainer.Parent = MainFrame

-- Lista di nomi tab (esempio)
local tabNames = {"ðŸ’ŽCredits", "ðŸ—’Script1", "ðŸ—’Script2", "ðŸ’»Hub", "âš™Options", "âŒClose", "Extra1", "Extra2", "Extra3", "Extra4"}

local tabButtons = {}
local ContentFrames = {}

-- Creo le tab sopra il background
for i, name in ipairs(tabNames) do
    local btn = Instance.new("TextButton")
    btn.Name = "TabBtn_" .. i
    btn.Text = name
    btn.Size = UDim2.new(0, 100, 0, 35)
    btn.Position = UDim2.new(0, 10, 0, 10 + (i - 1) * (35 + 8))
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.FredokaOne
    btn.TextScaled = true
    btn.Parent = TabsContainer

    local uiCornerBtn = Instance.new("UICorner")
    uiCornerBtn.CornerRadius = UDim.new(0, 8)
    uiCornerBtn.Parent = btn

    tabButtons[i] = btn

    -- Creazione frame contenuto per la tab
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, -140, 1, -60)  -- lascia spazio per tabsbg + padding
    frame.Position = UDim2.new(0, 130, 0, 50 + 5)
    frame.BackgroundColor3 = Color3.fromRGB(38, 38, 38)
    frame.Visible = false
    frame.Parent = MainFrame

    local cornerCont = Instance.new("UICorner")
    cornerCont.CornerRadius = UDim.new(0, 10)
    cornerCont.Parent = frame

    local scroll = Instance.new("ScrollingFrame")
    scroll.Size = UDim2.new(1, -20, 1, -20)
    scroll.Position = UDim2.new(0, 10, 0, 10)
    scroll.BackgroundTransparency = 1
    scroll.ScrollBarThickness = 0
    scroll.Parent = frame

    ContentFrames[i] = { Frame = frame, Scroll = scroll }

    btn.MouseButton1Click:Connect(function()
        for j, tbl in ipairs(ContentFrames) do
            tbl.Frame.Visible = (j == i)
        end
    end)
end

-- inizializza la prima tab visibile
if #ContentFrames > 0 then
    ContentFrames[1].Frame.Visible = true
end
