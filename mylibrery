-- NexaUI Library FIXED VERSION (Rounded, Centered, No Overflow, Smooth Drag)
-- Font: Fredoka One
-- Completely Reworked Aesthetic Layer

local NexaUI = {}

--// INERTIA DRAG FUNCTION
local function addDrag(ui)
    local UserInputService = game:GetService("UserInputService")
    local RunService = game:GetService("RunService")

    local dragging = false
    local dragStart = nil
    local startPos = nil
    local velocity = Vector2.new(0, 0)

    ui.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = ui.Position
        end
    end)

    ui.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    RunService.Heartbeat:Connect(function(dt)
        if dragging then
            local delta = UserInputService:GetMouseLocation() - dragStart
            local newPos = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
            velocity = Vector2.new(delta.X, delta.Y)
            ui.Position = newPos
        else
            velocity = velocity * 0.88
            if math.abs(velocity.X) > 0.2 or math.abs(velocity.Y) > 0.2 then
                ui.Position = ui.Position + UDim2.fromOffset(velocity.X, velocity.Y)
            end
        end
    end)
end


--// CREATE WINDOW
function NexaUI:CreateWindow(config)
    config = config or {}
    local title = config.Title or "NexaUI Library"

    local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
    ScreenGui.ResetOnSpawn = false

    -- MAIN WINDOW
    local Main = Instance.new("Frame", ScreenGui)
    Main.Size = UDim2.new(0, 500, 0, 330)
    Main.Position = UDim2.new(0.5, -250, 0.5, -165)
    Main.BackgroundColor3 = Color3.fromRGB(26, 26, 26)
    Main.BorderSizePixel = 0
    Main.Name = "NexaMain"
    Main.Active = true
    Main.ClipsDescendants = true
    Main.BackgroundTransparency = 0
    Main.ZIndex = 2
    Main.Parent = ScreenGui
    Main.AutomaticSize = Enum.AutomaticSize.None
    Main:SetAttribute("Rounded", true)

    -- Rounded corners
    Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 16)

    -- TOPBAR
    local TopBar = Instance.new("Frame", Main)
    TopBar.Size = UDim2.new(1, 0, 0, 38)
    TopBar.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    TopBar.BorderSizePixel = 0
    Instance.new("UICorner", TopBar).CornerRadius = UDim.new(0, 16)

    local TopPadding = Instance.new("UIPadding", TopBar)
    TopPadding.PaddingLeft = UDim.new(0, 12)

    -- Title Text
    local TitleLabel = Instance.new("TextLabel", TopBar)
    TitleLabel.Text = title
    TitleLabel.Size = UDim2.new(1, -35, 1, 0)
    TitleLabel.Position = UDim2.new(0, 6, 0, 0)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Font = Enum.Font.FredokaOne
    TitleLabel.TextSize = 20
    TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left

    -- CLOSE BUTTON
    local Close = Instance.new("TextButton", TopBar)
    Close.Size = UDim2.new(0, 20, 0, 20)
    Close.Position = UDim2.new(1, -30, 0.5, -10)
    Close.BackgroundTransparency = 1
    Close.Text = "X"
    Close.Font = Enum.Font.FredokaOne
    Close.TextColor3 = Color3.fromRGB(255, 70, 70)
    Close.TextSize = 20

    Close.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)

    addDrag(TopBar)

    -- SIDE TAB BAR
    local TabFrame = Instance.new("Frame", Main)
    TabFrame.Size = UDim2.new(0, 115, 1, -48)
    TabFrame.Position = UDim2.new(0, 10, 0, 45)
    TabFrame.BackgroundColor3 = Color3.fromRGB(32, 32, 32)
    TabFrame.BorderSizePixel = 0
    Instance.new("UICorner", TabFrame).CornerRadius = UDim.new(0, 12)

    local TabList = Instance.new("UIListLayout", TabFrame)
    TabList.Padding = UDim.new(0, 6)
    TabList.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabList.VerticalAlignment = Enum.VerticalAlignment.Top

    local TabPadding = Instance.new("UIPadding", TabFrame)
    TabPadding.PaddingTop = UDim.new(0, 8)

    -- CONTENT AREA
    local ContentFrame = Instance.new("Frame", Main)
    ContentFrame.Size = UDim2.new(1, -140, 1, -60)
    ContentFrame.Position = UDim2.new(0, 130, 0, 50)
    ContentFrame.BackgroundColor3 = Color3.fromRGB(32, 32, 32)
    ContentFrame.BorderSizePixel = 0
    Instance.new("UICorner", ContentFrame).CornerRadius = UDim.new(0, 12)

    local tabs = {}

    -- CREATE TAB
    function NexaUI:Tab(TabName)
        local Button = Instance.new("TextButton", TabFrame)
        Button.Size = UDim2.new(1, -20, 0, 32)
        Button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        Button.Text = TabName
        Button.Font = Enum.Font.FredokaOne
        Button.TextSize = 16
        Button.TextColor3 = Color3.fromRGB(255, 255, 255)
        Button.BorderSizePixel = 0
        Instance.new("UICorner", Button).CornerRadius = UDim.new(0, 10)

        local Page = Instance.new("ScrollingFrame", ContentFrame)
        Page.Size = UDim2.new(1, -10, 1, -10)
        Page.Position = UDim2.new(0, 5, 0, 5)
        Page.BackgroundTransparency = 1
        Page.ScrollBarThickness = 4
        Page.Visible = false

        local Layout = Instance.new("UIListLayout", Page)
        Layout.Padding = UDim.new(0, 8)

        Page.CanvasSize = UDim2.new(0, 0, 0, Layout.AbsoluteContentSize.Y)

        Layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            Page.CanvasSize = UDim2.new(0, 0, 0, Layout.AbsoluteContentSize.Y)
        end)

        Button.MouseButton1Click:Connect(function()
            for _, tb in pairs(tabs) do
                tb.Page.Visible = false
            end
            Page.Visible = true
        end)

        local tabObject = {}
        tabObject.Page = Page

        function tabObject:Button(text, callback)
            local Btn = Instance.new("TextButton", Page)
            Btn.Size = UDim2.new(1, -10, 0, 38)
            Btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            Btn.Font = Enum.Font.FredokaOne
            Btn.TextSize = 18
            Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            Btn.Text = text
            Btn.BorderSizePixel = 0
            Instance.new("UICorner", Btn).CornerRadius = UDim.new(0, 10)

            Btn.MouseButton1Click:Connect(function()
                pcall(callback)
            end)
        end

        table.insert(tabs, {Button = Button, Page = Page})
        return tabObject
    end

    return NexaUI
end

return NexaUI

